<template name="getBusinessSite" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="workdayAsOfMoment" description="The Moment"/>
    <parameter name="workdayDescriptor" description="The descriptor"/>
    <parameter name="workdaySystemIdType" description="The type of the system Id"/>
    <parameter name="workdaySystemId" description="System Id"/>
    <sequence>
        <property name="workdayAsOfMoment" expression="$func:workdayAsOfMoment"/>
        <property name="workdayDescriptor" expression="$func:workdayDescriptor"/>
        <property name="workdaySystemIdType" expression="$func:workdaySystemIdType"/>
        <property name="workdaySystemId" expression="$func:workdaySystemId"/>
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:bsvc="urn:com.workday/bsvc"
                                  xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body>
                        <bsvc:Business_Site_Get bsvc:As_Of_Moment="$1" bsvc:version="$2">
                            <bsvc:Location_Reference>
                                <bsvc:Integration_ID_Reference bsvc:Descriptor="$3">
                                    <bsvc:ID bsvc:System_ID="$4">$5</bsvc:ID>
                                </bsvc:Integration_ID_Reference>
                            </bsvc:Location_Reference>
                        </bsvc:Business_Site_Get>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg evaluator="xml" expression="$ctx:workdayAsOfMoment"/>
                <arg evaluator="xml" expression="$ctx:workdayApiVersion"/>
                <arg evaluator="xml" expression="$ctx:workdayDescriptor"/>
                <arg evaluator="xml" expression="$ctx:workdaySystemIdType"/>
                <arg evaluator="xml" expression="$ctx:workdaySystemId"/>
            </args>
        </payloadFactory>
        <class name="org.wso2.carbon.connector.workday.UTTokenBuilder"/>
        <header name="Action" scope="default"
                value="urn:com.workday/bsvc/Human_Resources/Human_ResourcesPort/Business_Site_GetInput"/>
        <header name="To" expression="fn:concat($ctx:workdayApiUrl, '/ccx/service/', $ctx:workdayTenantId, '/Human_Resources')"/>
        <filter source="$ctx:workdayBlockingInvocation" regex="true">
            <then>
                <callout initAxis2ClientOptions="false">
                    <source type="envelope"/>
                    <target xmlns:s11="http://schemas.xmlsoap.org/soap/envelope/"
                            xmlns:s12="http://www.w3.org/2003/05/soap-envelope"
                            xpath="s11:Body/child::*[fn:position()=1] | s12:Body/child::*[fn:position()=1]"/>
                    <enableSec outboundPolicy="UTPolicy"/>
                </callout>
            </then>
            <else>
                <call>
                    <endpoint>
                        <default format="soap11">
                            <enableSec outboundPolicy="UTPolicy"/>
                        </default>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>
