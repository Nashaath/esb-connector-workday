<template name="getJobCategories" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="workdayGetJobCategoriesRecords" description="One or more records that needs to be added."/>
    <sequence>
        <property name="workdayGetJobCategoriesRecords" expression="$func:workdayGetJobCategoriesRecords"/>
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:bsvc="urn:com.workday/bsvc"
                                  xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body>
                        <bsvc:Get_Job_Categories_Request bsvc:version="$1">
                            $2
                        </bsvc:Get_Job_Categories_Request>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg evaluator="xml" expression="$ctx:workdayApiVersion"/>
                <arg evaluator="xml" expression="$ctx:workdayGetJobCategoriesRecords"/>
            </args>
        </payloadFactory>
        <class name="org.wso2.carbon.connector.workday.UTTokenBuilder"/>
        <header name="Action" scope="default"
                value="urn:com.workday/bsvc/Human_Resources/Human_ResourcesPort/Get_Job_CategoriesInput"/>
        <header name="To" expression="fn:concat($ctx:workdayApiUrl, '/ccx/service/', $ctx:workdayTenantId, '/Human_Resources')"/>
        <filter source="$ctx:workdayBlockingInvocation" regex="true">
            <then>
                <callout initAxis2ClientOptions="false">
                    <source type="envelope"/>
                    <target xmlns:s11="http://schemas.xmlsoap.org/soap/envelope/"
                            xmlns:s12="http://www.w3.org/2003/05/soap-envelope"
                            xpath="s11:Body/child::*[fn:position()=1] | s12:Body/child::*[fn:position()=1]"/>
                    <enableSec outboundPolicy="UTPolicy"/>
                </callout>
            </then>
            <else>
                <call>
                    <endpoint>
                        <default format="soap11">
                            <enableSec outboundPolicy="UTPolicy"/>
                        </default>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>
